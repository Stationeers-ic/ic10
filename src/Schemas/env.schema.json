{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"type": "object",
	"properties": {
		"version": {
			"type": "string"
		},
		"devices": {
			"type": "array",
			"items": {
				"type": "object",
				"properties": {
					"id": {
						"type": "string"
					},
					"PrefabName": {
						"type": "string"
					},
					"ports": {
						"type": "array",
						"items": {
							"type": "object",
							"properties": {
								"port": {
									"type": "string"
								},
								"network": {
									"type": "string"
								}
							},
							"required": ["port", "network"]
						}
					},
					"props": {
						"type": "array",
						"items": {
							"type": "object",
							"properties": {
								"name": {
									"type": "string"
								},
								"value": {
									"type": "string"
								}
							},
							"required": ["name", "value"]
						}
					}
				},
				"required": ["id", "PrefabName", "ports", "props"]
			}
		},
		"networks": {
			"type": "array",
			"items": {
				"type": "object",
				"properties": {
					"id": {
						"type": "string"
					},
					"type": {
						"anyOf": [
							{
								"const": "data"
							},
							{
								"const": "power"
							},
							{
								"const": "chute"
							},
							{
								"const": "pipe"
							},
							{
								"const": "wireless"
							},
							{
								"const": "landing"
							}
						]
					}
				},
				"required": ["id", "type"]
			}
		}
	},
	"required": ["version", "devices", "networks"]
}
