{
	"compilerOptions": {
		"outDir": "./dist/",
		"rootDir": "./src/",
		"declaration": true,
		"module": "ESNext",
		"baseUrl": ".",
		"paths": {
			"@/*": ["src/*"],
			"@tests/*": ["tests/*"],
			"@tools/*": ["tools/*"]
		},
		"lib": ["ESNext"],
		"target": "ESNext",
		"allowJs": false,
		"skipLibCheck": true,
		"moduleResolution": "bundler"
	},
	"exclude": ["dist", "tests", "tools", "node_modules", "src/Defines", "src/Devices", "src/Schemas", "vite.config.ts"]
}
